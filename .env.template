# Environment Configuration
ENVIRONMENT=development
API_DEBUG=true
TESTING=false

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_SECRET_KEY=your-super-secret-key-change-this-in-production
API_TITLE=AI Calling Agent API
API_VERSION=1.0.0

# Database Configuration
DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/ai_calling_agent
DATABASE_TEST_URL=postgresql+asyncpg://username:password@localhost:5432/ai_calling_agent_test
DATABASE_ECHO=false
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_SESSION_DB=1
REDIS_MAX_CONNECTIONS=20

# Twilio Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_WEBHOOK_BASE_URL=https://your-domain.com

# Celery Configuration (for background tasks)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_TIMEZONE=UTC

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# External API Keys
OPENAI_API_KEY=sk-your-openai-api-key-here
ELEVENLABS_API_KEY=your-elevenlabs-api-key-here

# Optional: Google Cloud APIs (if using Google STT/TTS)
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
# GOOGLE_CLOUD_PROJECT=your-project-id

# Optional: AWS Configuration (for S3 audio storage)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_DEFAULT_REGION=us-east-1
# AWS_S3_BUCKET=your-audio-files-bucket

# Optional: Monitoring and Observability
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# PROMETHEUS_PORT=9090

# Security Settings
CORS_ORIGINS=*
TRUSTED_HOSTS=*

# Session Management
SESSION_TIMEOUT_MINUTES=30
MAX_CONCURRENT_CALLS=100

# Rate Limiting
RATE_LIMIT_CALLS_PER_MINUTE=60
RATE_LIMIT_CALLS_PER_HOUR=1000

# Audio Processing Settings
MAX_AUDIO_FILE_SIZE_MB=10
SUPPORTED_AUDIO_FORMATS=wav,mp3,ogg,flac
DEFAULT_SAMPLE_RATE=16000

# AI Model Configuration
DEFAULT_TTS_VOICE=nova
DEFAULT_STT_LANGUAGE=en
DEFAULT_LLM_MODEL=gpt-4
DEFAULT_LLM_TEMPERATURE=0.7
MAX_CONVERSATION_TURNS=50

# Development Settings (only for development environment)
DEV_MOCK_TWILIO=false
DEV_MOCK_OPENAI=false
DEV_SAVE_AUDIO_FILES=true
DEV_AUDIO_FILES_PATH=./temp_audio